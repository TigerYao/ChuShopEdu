<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dachuwang.software.yaohu.recycleviewpager.RecyclerViewPager
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:clipToPadding="false"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:triggerOffset="0.1" />

    <com.dachuwang.software.yaohu.recycleviewpager.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:background="#000"
        android:gravity="center"
        app:indicator_drawable_normal="@mipmap/circle_indicator_solid"
        app:indicator_drawable_selector="@mipmap/circle_indicator_stroke"
        app:indicator_spacing="2dp"
        app:indicator_type="circle" />
</FrameLayout>
