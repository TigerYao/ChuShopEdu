<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.dachuwang.children.education.launcher.ChildrenEduLauncherFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment"
        android:name="com.dachuwang.software.yaohu.chushopedu.modules.HorizontalLayoutFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:layout="@layout/layout_horizontal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nagtive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
</RelativeLayout>
